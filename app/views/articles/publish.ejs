<%- include('../includes/header') %>
<div class="siteContent">
  <div class="ex3">
    <div class="menuCheck">
      <form method="post">
        <div class="title-publish-article">
          <%= lang['views.publishArticle.titlePageTxt'] %>    
        </div>
          <%= lang['views.nameTxt'] %><br> 
          <input type="text" name="name"><br><br>
          <% if (typeof flash.errors != "undefined" && flash.errors.name) { %>
            <div class="empty-fields">          
              <%= flash.errors.name %>           
            </div>
          <% } %>
          <%= lang['views.emailTxt'] %><br>
          <input type="text" name="email"><br><br>
          <% if (typeof flash.errors != "undefined" && flash.errors.email) { %>
            <div class="empty-fields">           
              <%= flash.errors.email %>       
            </div>
          <% } %>
          <%= lang['views.titleTxt'] %><br>
          <input type="text" name="title"><br><br>
          <% if (typeof flash.errors != "undefined" && flash.errors.title) { %>
            <div class="empty-fields">          
              <%= flash.errors.title %>       
            </div>
          <% } %>
          <%= lang['views.publishArticle.textTxt'] %><br>
          <textarea rows="7" cols="48" name="text"></textarea><br><br>
          <% if (typeof flash.errors != "undefined" && flash.errors.text) { %>
            <div class="empty-fields">         
              <%= flash.errors.text %>          
            </div>
          <% } %>
          <button type="submit"><h3><%= lang['views.publishArticle.postBtnTxt'] %></h3></button>   
      </form>
    </div>
  </div>
</div>
<%- include('../includes/footer') %>
